<div class="form-container">
<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="form-div inline">
  	 <div class="field">
    	 <%= f.label :title %>
    	 <%= f.text_field :title %>
  	</div>
  	<div class="field">
    	<%= f.label :location %>
    	<%= f.text_field :location %>
  	</div>
  	<div class="field">
    	<%= f.label :street %>
    	<%= f.text_field :street %>
  	</div>
  	<div class="field">
    	<%= f.label :city %>
    	<%= f.text_field :city %>
  	</div>
  	<div class="field  inline">
  	  <%= f.label :state %>
  	<%= f.select :state, options_for_select(us_states, @selected_state), {:include_blank => false }, { class: "input-med state-select" } %>
  	</div>
  	<div class="field inline">
    	<%= f.label :zip %>
    	<%= f.text_field :zip, class: "input-xs",maxlength: 5 %>
 	</div>
   </div><!-- column -->
   <div class="form-div inline">
  	 <div class="field">
    	 <%= f.label :date %>
    	 <%= f.date_select :date, {:order => [:month, :day, :year], :use_short_month => true, :default => Date.today}, {:class => "input-xs"} %>
  	</div>
  	<div class="field input-append bootstrap-timepicker">
    	<%= f.label :time %>
    	<%= f.text_field :time, :id => "timepicker1", :class => "input-xs" %>
		<span class="add-on"><i class="icon-time"></i></span>
  	</div>
  	<div class="field">
    	<%= f.label :ticket_link %>
    	<%= f.text_field :ticket_link %>
  	</div>
  	<div class="field">
    	<%= f.label :location_website %>
    	<%= f.text_field :location_website %>
  	</div></br>
    <div class="actions">
      <%= f.submit class: "my-button"%>
	  <button type="button" class="my-button">
	  <%= link_to 'Cancel', events_path %>
  </button>
    </div>
  </div>

<% end %>
</div>

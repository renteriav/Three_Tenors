<!-- Page Heading -->
<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			Sound Clips <small>Index</small>
		</h1>
        <ol class="breadcrumb">
			<li class="active">
				<i class="fa fa-microphone"></i> Events
            </li>
        </ol>
		<% if flash[:notice] %>
		<div id="notice" class="alert alert-success alert-dismissible" role="alert">
			<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			<strong><%= flash[:notice] %></strong>
		</div>
	</div>
	<% end %>
</div>
<!-- /.row -->
<div class="row">
	<div class="col-lg-12">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Attachment</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>


    <% @sound_clips.each do |sound_clip| %>
      <tr>
        <td><%= sound_clip.title %></td>
        <td><%= sound_clip.description %></td>
        <td class="wrap"><%= sound_clip.attachment %></td>
        <td><%= link_to 'Show', sound_clip, class: "btn btn-mini btn-success bold" %></td>
        <td><%= link_to 'Edit', edit_sound_clip_path(sound_clip), class: "btn btn-mini btn-info bold" %></td>
        <td><%= link_to 'Destroy', sound_clip, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-mini btn-danger bold" %></td>
      </tr>
    <% end %>

</table></div>
</div>
<div class="row">
	<div class="col-md-12">
<%= link_to 'New Sound clip', new_sound_clip_path, class: "btn btn-small btn-primary" %></div></div>